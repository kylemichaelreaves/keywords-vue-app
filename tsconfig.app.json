{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "env.d.ts",
    "vite-env.d.ts"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "src/test/*"
  ],
  "module": "ESNext",
  "target": "ESNext",
  "composite": true,
  "moduleResolution": "Bundler",
  "strict": true,
  "skipLibCheck": true,
  "esModuleInterop": true,
  "forceConsistentCasingInFileNames": true,
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "vitest/globals",
      "vite/client",
      "node",
      "jsdom"
    ],
    "baseUrl": "./src",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@types": [
        "types/index.ts"
      ],
      "@test/*": [
        "test/*"
      ],
      "@mocks/*": [
        "mocks/*"
      ],
      "@api/*": [
        "api/*"
      ],
      "@stores/*": [
        "stores/*"
      ],
      "@constants": [
        "constants.ts"
      ],
      "@main": [
        "main.ts"
      ]
    }
  }
}
