{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "src/test/*"
  ],
  "module": "esnext",
  "compilerOptions": {
    "types": [
      "vitest/globals",
      "node",
      "jsdom"
    ],
    "composite": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@types": [
        "types/index.ts"
      ],
      "@test/*": [
        "test/*"
      ],
      "@api/*": [
        "api/*"
      ],
      "@stores/*": [
        "stores/*"
      ],
      "@constants": [
        "constants.ts"
      ],
      "@main": [
        "main.ts"
      ]
    }
  }
}
