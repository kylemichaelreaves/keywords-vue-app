{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "src/test/*"
  ],
  "module": "esnext",
  "compilerOptions": {
    "types": [
      "vitest/globals",
      "node",
      "jsdom"
    ],
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@types": [
        "./src/types/index.ts"
      ],
      "@test/*": [
        "./src/test/*"
      ],
      "@api/*": [
        "./src/api/*"
      ],
      "@stores/*": [
        "./src/stores/*"
      ],
      "@constants": [
        "./src/constants.ts"
      ],
      "@main": [
        "./src/main.ts"
      ]
    }
  }
}
