{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "src/test/*"
  ],
  "module": "esnext",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@types": [
        "./src/types"
      ],
      "@test/*": [
        "./src/test/*"
      ],
      "@api/*": [
        "./src/api/*"
      ],
      "@stores/*": [
        "./src/stores/*"
      ],
    }
  }
}
